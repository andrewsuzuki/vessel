{
    "name": "Vessel",
    "description": "Vessel: simple content management for Laravel 4.",
    "homepage": "http://vesselcms.com",
    "authors": [
        {
            "name": "Hokeo",
            "homepage": "http://vesselcms.com"
        }
    ],
    "support": {
        "email": "support@vesselcms.com",
        "issues": "https://github.com/hokeo/vessel/issues",
        "source": "https://github.com/hokeo/vessel"
    },
    "require": {
        "php": ">=5.3.0",
        "laravel/framework": "4.1.*",
        "zizaco/entrust": "1.1.*",
        "edvinaskrucas/notification": "2.*",
        "cebe/markdown": "*",
        "baum/baum": "~1.0",
        "intervention/image": "dev-master",
        "philf/setting": "dev-master",
        "vespakoen/menu": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "4.0.*",
        "mockery/mockery": "dev-master"
    },
    "autoload": {
        "classmap": [
            "src/controllers",
            "src/models",
            "src/library",
            "src/migrations",
            "src/seeds",
            "src/formatters"
        ],
        "psr-0": {
            "Hokeo\\Vessel\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests"
        ]
    },
    "minimum-stability": "stable"
}